<Window x:Class="InfoHidden.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InfoHidden.ViewModel"
        xmlns:presentation="clr-namespace:InfoHidden.TriggerAction"
        xmlns:converter="clr-namespace:InfoHidden.Converters"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"       
        Title="Hide In Picture" Height="Auto" Width="Auto"
        x:Name="mainWindowView" WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainWindowViewModel></vm:MainWindowViewModel>
    </Window.DataContext>

    <Window.Resources>

        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/ResourceDictionary/ResourceDict_MainWindow.xaml"></ResourceDictionary>
                
            </ResourceDictionary.MergedDictionaries>

            <TransformGroup x:Key="ImageTransformResource" >
                <ScaleTransform x:Name="sfr"/>
                <TranslateTransform x:Name="tlt"/>
            </TransformGroup>
            
        </ResourceDictionary>
        
    </Window.Resources>
    
    <Grid x:Name="RootPanel">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu>
            
            <MenuItem Header="{DynamicResource File}">
                
                <MenuItem Header="{DynamicResource OpenCoverFile}" 
                          Command="{Binding OpenFileCommand}"
                          CommandParameter="Cover"/>
                <MenuItem Header="{DynamicResource OpenHiddenFile}"
                          Command="{Binding OpenFileCommand}"
                          CommandParameter="Hidden"></MenuItem>
                <MenuItem Header="{DynamicResource SavePictureAs}"
                          Command="{Binding SaveAsCommand}"/>
                <MenuItem Header="{DynamicResource ClosePicture}" 
                          Command="{Binding ClosePictureCommand}"/>
                
            </MenuItem>
            
            <MenuItem Header="{DynamicResource Image}">

                <MenuItem Header="{DynamicResource HideFile}" 
                          Command="{Binding HideFileCommand}"
                          CommandParameter="{Binding ElementName=mainWindowView}"/>
                <MenuItem Header="{DynamicResource RetrieveFile}"
                          Command="{Binding RetrieveFileCommand}"
                          CommandParameter="{Binding ElementName=mainWindowView}"></MenuItem>
                
                <Separator></Separator>

                <MenuItem Header="{DynamicResource PictureInfo}"
                          Command="{Binding PictureInfoCommand}"
                          CommandParameter="{Binding ElementName=mainWindowView}"></MenuItem>
                
            </MenuItem>
            
            <MenuItem Header="{DynamicResource View}">
                
                <MenuItem Header="1000%" 
                          Command="{Binding PictureZoomCommand}"
                          CommandParameter="1000">
                </MenuItem>
                <MenuItem Header="500%"
                          Command="{Binding PictureZoomCommand}"
                          CommandParameter="500"></MenuItem>
                <MenuItem Header="200%"
                          Command="{Binding PictureZoomCommand}"
                          CommandParameter="200"></MenuItem>
                <MenuItem Header="100%"
                          Command="{Binding PictureZoomCommand}"
                          CommandParameter="100"></MenuItem>
                <MenuItem Header="50%" 
                          Command="{Binding PictureZoomCommand}"
                          CommandParameter="50"></MenuItem>
                
            </MenuItem>
            
            <MenuItem Header="{DynamicResource Language}">
                <MenuItem Header="{DynamicResource English}"
                          Command="{Binding SwitchLangCommand}"
                          CommandParameter="en-US"></MenuItem>
                <MenuItem Header="{DynamicResource Chinese}"
                          Command="{Binding SwitchLangCommand}"
                          CommandParameter="zh-CN"></MenuItem>
            </MenuItem>
            
        </Menu>
        
        <ToolBarTray Grid.Row="1" Margin="5" Background="White">

            <ToolBarTray.Resources>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="20"></Setter>
                </Style>
            </ToolBarTray.Resources>

            <ToolBar >
                <Button Command="{Binding HideFileCommand}"
                        CommandParameter="{Binding ElementName=mainWindowView}">
                    <Image Source="/ToolbarPic/hide_file_in_picture.png" />
                </Button>
                <Button Command="{Binding RetrieveFileCommand}"
                        CommandParameter="{Binding ElementName=mainWindowView}">
                    <Image Source="/ToolbarPic/retrieve_file_from_picture.jpg" />
                </Button>
            </ToolBar>
            
            <ToolBar >
                <Button Command="{Binding SaveAsCommand}">
                    <Image Source="/ToolbarPic/save_as.jpg" />
                </Button>
            </ToolBar>
            
        </ToolBarTray>

        <Border Grid.Row="2" BorderBrush="LightBlue" BorderThickness="5" Margin="10">

            <Grid>

                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    
                </Grid.ColumnDefinitions>

                <ScrollViewer Style="{StaticResource scrollViewerStyle}">
                    <ContentControl
                        MouseLeftButtonDown="ContentControl_MouseLeftButtonDown"
                        MouseLeftButtonUp="ContentControl_MouseLeftButtonUp"
                        MouseMove="ContentControl_MouseMove"
                        MouseWheel="ContentControl_MouseWheel">
                        <Image x:Name="Img" 
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                                RenderTransform="{StaticResource ImageTransformResource}" 
                                Source="{Binding CoverImage}" MinHeight="300" ></Image>
                    </ContentControl>
                </ScrollViewer>
                
                <GridSplitter Grid.Column="1" Grid.RowSpan="2" 
                              Style="{StaticResource gridSplitter}"/>

                <ScrollViewer Grid.Column="2" 
                              Style="{StaticResource scrollViewerStyle}">
                    <ContentControl>
                        <Image x:Name="HiddenImg"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                            RenderTransform="{StaticResource ImageTransformResource}" 
                            Source="{Binding HiddenImage}" MinHeight="300"></Image>
                    </ContentControl>
                    
                </ScrollViewer>
                
            </Grid>
            
        </Border>

        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding ImageFilePath, Mode=OneWay}"></TextBlock>
            </StatusBarItem>
        </StatusBar>

    </Grid>
    
</Window>
